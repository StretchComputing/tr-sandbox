<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<filter>
	  <filter-name>DetectDevice</filter-name>
	  <filter-class>com.stretchcom.sandbox.server.DetectDeviceFilter</filter-class>
	</filter>
	<filter-mapping>
	  <filter-name>DetectDevice</filter-name>
	  <url-pattern>*.html</url-pattern>
	</filter-mapping>
	<filter-mapping>
	  <filter-name>DetectDevice</filter-name>
	  <url-pattern>/</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>Sandbox</servlet-name>
		<servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
		<init-param>
		  <param-name>org.restlet.application</param-name>
		  <param-value>com.stretchcom.sandbox.server.SandboxApplication</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Sandbox</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
	<servlet>
	  <servlet-name>Detect</servlet-name>
	  <servlet-class>com.stretchcom.sandbox.server.SandboxServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	  <servlet-name>Detect</servlet-name>
	  <url-pattern>/detect</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
	  <welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
